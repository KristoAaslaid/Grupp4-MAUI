<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grupp4_MAUI.SensorPage"
             Title="SensorPage">
    <VerticalStackLayout
        Spacing="25">
        <Label 
            Text="Welcome to the Sensor Page!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
                x:Name="SensorCounterBtn"
                Text="Orientation Check"
                SemanticProperties.Hint="Check the orientation"
                Clicked="OnSensorCounterClicked"
                HorizontalOptions="Center" />

        <Button Text="Go back"
                Command="{Binding GoBackCommand}" />
    </VerticalStackLayout>
</ContentPage>