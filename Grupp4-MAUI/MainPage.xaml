<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grupp4_MAUI.MainPage"
             xmlns:viewmodel="clr-namespace:Grupp4_MAUI.ViewModel"
             x:DataType="viewmodel:MainViewModel"
             BackgroundColor="LightGrey"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <ScrollView>

        <!-- Css, so that content wont touch the edges of the screen -->

        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Start">
            
            <!-- Ighter app logo or a calming relaxing picture -->

            <Image
                Source="keep_calm.jpg"
                SemanticProperties.Description="Maailm siis kui kõik töötab"
                HeightRequest="200"
                Margin="0,50,0,0"
                HorizontalOptions="Center" />
            
            <!-- Button to navigate to first aid -->

            <Button
                Text="FirstAid" Clicked="NavigateToFirstAid"
                Margin="0,200,0,0"
                BackgroundColor="#4166F5"
                TextColor="White"
                HeightRequest="60" />

            <!-- Button to navigate to situations -->

            <Button
                Text="Situations" Clicked="NavigateToSituations"
                Margin="0,0,0,0"
                BackgroundColor="#4166F5"
                TextColor="White"
                HeightRequest="60"/>

            <!-- Button to navigate to compass -->

            <Button
                Text="Compass" Clicked="NavigateToCompass"
                Margin="0,0,0,0"
                BackgroundColor="#4166F5"
                TextColor="White"
                HeightRequest="60"/>
            
            <!-- Button to navigate to GPS -->

            <Button
                Text="GPS" Clicked="NavigateToGPS"
                Margin="0,0,0,0"
                BackgroundColor="#4166F5"
                TextColor="White"
                HeightRequest="60"/>
            
            <!-- Button to navigate to sensors-->

            <Button
                Text="Sensors" Clicked="NavigateToSensors"
                Margin="0,0,0,0"
                BackgroundColor="#4166F5"
                TextColor="White"
                HeightRequest="60"/>





        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
