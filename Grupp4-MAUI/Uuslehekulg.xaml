<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grupp4_MAUI.Uuslehekulg"
             xmlns:viewmodel="clr-namespace:Grupp4_MAUI.ViewModel"
             BackgroundColor="LightGrey"
             Title="Uuslehekulg">
    <VerticalStackLayout Padding="20">
        <Label 
            Text="{Binding Text}"
            FontSize="30"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label Text="Users" TextColor="Black"/>
        <ListView x:Name="userList" 
                  HeightRequest="650"
                  >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell ImageSource="{Binding AvatarURI}" Text="{Binding FullName}" Detail="{Binding Email}" TextColor="Black" DetailColor="Black"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Go back"
            Command="{Binding GoBackCommand}" />
    </VerticalStackLayout>
</ContentPage>