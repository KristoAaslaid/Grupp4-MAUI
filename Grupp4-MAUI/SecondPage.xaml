<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grupp4_MAUI.SecondPage"
             xmlns:viewmodel="clr-namespace:Grupp4_MAUI.ViewModel"
             x:DataType="viewmodel:SecondPageViewModel"
             Title="SecondPage">
    <VerticalStackLayout>
        <Label
                Text="Teine lehekülg"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

        <Button Text="Dark mode"
                Clicked="DarkMode" />

        <Entry Placeholder="Kirjuta siia midagi ja see läheb txt faili"
               x:Name="TextToSave"
               Grid.Row="1" />

        <Button Text="Save"
                Clicked="SaveText" />

        <Button Text="Read"
                Clicked="ReadText" />

        <Label
            x:Name="fileReadResult"
            Text="{Binding Text}"/>

        <Button Text="Go back"
                Command="{Binding GoBackCommand}" />

    </VerticalStackLayout>
</ContentPage>