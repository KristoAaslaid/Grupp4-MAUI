<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grupp4_MAUI.GPS"
             Title="GPS">

    <!-- Css, et sisu ei puudutaks telefoni 22ri ja oleks ilusam -->
    <ScrollView>
    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Start">
        
        <!-- Lehe pealkiri -->
        
        <Label 
            Text="Your exact location"
            Margin="0, 30, 0, 0"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <!-- Nupp mis näitab kasutaja täpset asukohta Latitudis ja Longitudis-->

        <Button
            Text="Show current location" Clicked="GetLocation"
            BackgroundColor="#02AD62"
            TextColor="White"
            HeightRequest="60"/>
        
            <Button
             Text="To Main Page" Clicked="BackButton"
             Margin="0,0,0,0"
             BackgroundColor="#02AD62"
             TextColor="White"
             HeightRequest="100"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>