<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grupp4_MAUI.GPS"
             Title="GPS">

    <!-- Css, so that content wont touch the edges of the screen -->
    <ScrollView>
        <VerticalStackLayout
            Spacing="20"
            Padding="30,0"
            VerticalOptions="Start">

            <!-- Header in middle of sceen also bigger -->
        
            <Label 
                Text="Your exact location"
                Margin="0, 30, 0, 0"
                VerticalOptions="Center" 
                HorizontalOptions="Center"/>
        
            <!-- Button that shows current location in both longitude and latitude-->

            <Button
                Text="Show current location" Clicked="GetLocation"
                BackgroundColor="#02AD62"
                TextColor="White"
                HeightRequest="60"/>
        
            <!-- Back Button -->

            <Button
                 Text="To Main Page" Clicked="BackButton"
                 Margin="0,0,0,0"
                 BackgroundColor="#02AD62"
                 TextColor="White"
                 HeightRequest="100"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>