<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:drawable="clr-namespace:Grupp4_MAUI"
             x:Class="Grupp4_MAUI.CompassPage"
             Title="CompassPage">
    <ContentPage.Resources>
        <drawable:GraphicsDrawable x:Key="drawable" />
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Label
            x:Name="CompassLabel"
            Text="Compass still in development"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <Button
            Text="Toggle Compass"
            Clicked="ToggleCompass"
            />

        <GraphicsView Drawable="{StaticResource drawable}"
                      HeightRequest="500"
                      WidthRequest="320" />


        <Button
             Text="To Main Page" Clicked="BackButton"
             Margin="0,0,0,0"
             BackgroundColor="#4166F5"
             TextColor="White"
             HeightRequest="100"/>
    </VerticalStackLayout>
    
</ContentPage>